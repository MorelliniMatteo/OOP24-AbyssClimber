<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unibo.abyssclimber.ui.gameover.GameOverController">

    <center>
        <VBox alignment="CENTER" spacing="14" style="-fx-padding: 24;">
            <VBox alignment="CENTER" spacing="8" styleClass="card">
                <Label text="Game Over" styleClass="title"/>
                <Label text="Sei morto. Vuoi riprovare o tornare al menu?" styleClass="subtitle" wrapText="true"/>
                <HBox alignment="CENTER" spacing="12" style="-fx-padding: 10 0 0 0;">
                    <Button text="Ricomincia" onAction="#onRestart" styleClass="primary-button"/>
                    <Button text="Menu principale" onAction="#onBackToMenu" styleClass="secondary-button"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
